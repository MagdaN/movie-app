<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movie_detail_title" parent="AppTheme">
        <item name="android:background">@color/movieGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_header_font_size</item>
        <item name="android:paddingRight">@dimen/site_paddings_15ps</item>
        <item name="android:paddingLeft">@dimen/site_paddings_15ps</item>
        <item name="android:paddingTop">@dimen/padding_large_30sp</item>
        <item name="android:paddingBottom">@dimen/padding_large_30sp</item>
    </style>

    <style name="movie_detail_content">
        <item name="android:paddingRight">@dimen/site_paddings_15ps</item>
        <item name="android:paddingLeft">@dimen/site_paddings_15ps</item>
        <item name="android:paddingTop">@dimen/padding_small_10sp</item>
    </style>

</resources>
